{
  "name": "gridfy",
  "version": "1.0.0",
  "description": "Dynamic Layout with CSS Grid",
  "main": "/src/index.js",
  "lib": "Gridfy",
  "npmName": "gridfy",
  "npmFileMap": [
    {
      "basePath": "lib",
      "files": [
        "**/*"
      ]
    }
  ],
  "scripts": {
    "build": "webpack --env dev && webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev && npm run test",
    "test": "mocha --require babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --require babel-core/register --colors -w ./test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muhibbudins/gridfy.git"
  },
  "keywords": [
    "webpack",
    "umd",
    "template",
    "es6 library",
    "library"
  ],
  "author": "Muhibbudin Suretno <muhibbudinsuretno1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muhibbudins/gridfy/issues"
  },
  "homepage": "https://github.com/muhibbudins/gridfy",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.13.1",
    "eslint-loader": "^1.9.0",
    "node-sass": "^4.8.3",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "^3.10.0",
    "yargs": "^10.0.3"
  }
}
